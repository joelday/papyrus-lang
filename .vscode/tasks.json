{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "windows": {
        "command": "dotnet",
        "args": [
          "cake"
        ]
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$tsc",
        "$msCompile"
      ]
    },
    {
      "label": "updateBin",
      "windows": {
        "command": "dotnet",
        "args": [
          "cake",
          "--target=\"update-bin\""
        ]
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "./build.sh",
      "args": [
        "--target=\"update-bin\""
      ],
      "problemMatcher": [
        "$tsc",
        "$msCompile"
      ]
    },
    {
      "label": "buildExtensionAndUpdateBin",
      "windows": {
        "command": "dotnet",
        "args": [
          "cake",
          "--target=\"build-extension-and-update-bin\""
        ]
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "./build.sh",
      "args": [
        "--target=\"build-extension-and-update-bin\""
      ],
      "problemMatcher": [
        "$tsc",
        "$msCompile"
      ]
    },
    {
      "label": "buildExtension",
      "windows": {
        "command": "dotnet",
        "args": [
          "cake",
          "--target=\"build-extension\""
        ]
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "./build.sh",
      "args": [
        "--target=\"build-extension\""
      ],
      "problemMatcher": [
        "$tsc",
        "$msCompile"
      ]
    },
    {
      "label": "tsc",
      "type": "shell",
      "command": "tsc",
      "options": {
        "cwd": "${workspaceFolder}/src/papyrus-lang-vscode"
      },
      "problemMatcher": [
        "$tsc"
      ]
    }
  ]
}